profiles {

    standard {
        docker.enabled = true
        process {
            withLabel:containerized {
                container = 'alexandrebouchardcote/default:0.1.6'
            }
        }
    }

    cluster {
        apptainer.enabled = true
        process {
            scratch = true
            executor = 'slurm'
            cpus = 1
            memory = 4.GB
            time = '2h'
            clusterOptions = "--nodes=1 --account $ALLOCATION_CODE"

            withLabel:containerized {
                container = 'alexandrebouchardcote/default:0.1.6'
                module = 'apptainer'
            }
        }
    }
}

